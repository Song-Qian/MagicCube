{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "baseUrl": ".",
    "sourceMap": false,
    "lib": [
      "esnext",
      "dom",
      "ES2015"
    ],
    "types": [
      "node",
      "reflect-metadata"
    ],
    "stripInternal": true,
    "declaration": true,
    "declarationDir": "./typings",
    "rootDir": "./",
    "outDir": "./lib",
    "noEmitOnError": true,
    "removeComments": true,
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "paths": {
      "~/*": [
        "src/*"
      ],
      "tslib": [
        "node_modules/tslib/tslib.d.ts"
      ]
    },
    "plugins": [{
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "./lib",
    "typings"
  ]
}